
<%= link_to item_path(item), class: "text-decoration-none card-item-text-colot-blk" do %>
  <div class="card-item-index">
    <div class="card-item-img">
      <%=cl_image_tag item.images[0].key %>
    </div>
    <div class="card-item-content">
      <div class="row-one">
        <h5 class="two-lines" ><%= item.name %></h5>
        <div class="card-distance">
          <p>3km</p>
          <i class="fa-solid fa-location-dot"></i>
        </div>
      </div>
      <div class="row-two">
        <p><%= item.description %></p>
      </div>
      <div class="row-tree">
        <div class="card-price">
          <p><%= sprintf("%.2f", item.price) %> <small class="card-sub">/item</small> </p>
        </div>
        <div class="card-item-q">
          <p>
          <% if item.quantity.eql? 1  %>
            <%= item.quantity %> <small class="card-sub">item</small></p>
          <% else  %>
            <%= item.quantity %> <small class="card-sub">items</small></p>
          <% end %>
        </div>
        </div>
    </div>
  </div>
<%end%>
