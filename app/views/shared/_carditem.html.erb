<div class="card-item-index">
  <div class="card-item-img">
  </div>
  <div class="card-item-content">
    <div class="row-one">
      <h5><%= item.name %></h5>
      <p>3km</p>
    </div>
    <div class="row-two">
      <p><%= item.description %></p>
    </div>
    <div class="row-tree">
      <div class="card-price">
        <p><%= item.price %>$</p>
      </div>
      <div class="card-item-q">
        <p>+  <%= item.quantity %>   -</p>
      </div>
      <div class="add-to-shop">
        <i class="fa-thin fa-square-plus"></i>
      </div>
      </div>
  </div>
</div>
