<div class="outer m-3">
  <div class="container d-flex justify-content">
    <div class="card">
      <% if @item.images.attached? %>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= cl_image_tag @item.images[0].key, alt: "First slide", width: 700, class: "item-image" %>
            </div>
            <% @item.images[1..].each do |image| %>
              <div class="carousel-item">
                <%= cl_image_tag image.key, alt: "Other slides", width: 700 %>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
      </div>
    <%else %>
      <%=image_tag "item1_placeholder.jpg" %>
    <%end %>

      <div class="card-body">
        <div>
          <div class="card-title-condition">
            <h2 class="card-title"><%= @item.name %></h2>
            <p class="card-condition"><strong>condition: </strong><%= @item.condition %></p>
          </div>
          <p class="card-description"><%= @item.description %></p>
          <h4><strong><%= @item.price %> â‚¬</strong></h4>
        </div>
        <div class="card-shipping-proposal">
          <p class="shipping-method"><strong>available shipping methods: </strong>mail, self pick-up</p>
          <div class="main-button">send proposal</div>
        </div>
      </div>
    </div>

  <div class="item-card-map-location"   data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
  </div>

