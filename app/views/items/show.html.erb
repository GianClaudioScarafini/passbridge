 <div class="outer m-3">
  <div class="container d-flex justify-content">
    <div class="card">
      <%= image_tag "item_placeholder.jpg", alt: "Card image", width: 700%>
      <div class="card-body">
        <div>
          <div class="card-title-condition">
            <h2 class="card-title"><%= @item.name %></h2>
            <p class="card-condition"><strong>condition: </strong><%= @item.condition %></p>
          </div>
          <p class="card-description"><%= @item.description %></p>
          <h4><strong><%= @item.price %> â‚¬</strong></h4>
        </div>
        <div class="card-shipping-proposal">
          <p class="shipping-method"><strong>available shipping methods: </strong>mail, self pick-up</p>
          <div class="main-button">send proposal</div>
        </div>
      </div>
    </div>

    <div class="map m-3">
      <%= image_tag "map_placeholder.jpg", alt: "Map image", width: 500%>
    </div>
  </div>

  <h1 class="title">other items near you...</h1>

  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <% @items.first(4).each do |item| %>
          <div class="d-flex">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="main-button">Go somewhere</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <% @items.each_slice(4) do |items| %>
        <div class="carousel-item">
          <div class="d-flex">
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title"><%= items[0].name %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a href="#" class="main-button">Go somewhere</a>
              </div>
            </div>
            <div class="card" style="width: 18rem;">
              <img class="card-img-top" src="..." alt="Card image cap">
