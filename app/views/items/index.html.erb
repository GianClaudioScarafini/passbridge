<%# this is the search bar %>
<div class="search">
  <%= form_tag(items_path, method: "get", class: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "What are you looking for?" %>
    <%= submit_tag "Search" %>
  <% end %>
</div>

  <%# thise are the list of items %>
  <div class="items-cards-array">

    <% @items.each do |item| %>
      <div class="mt-3 text-decoration-none">
        <%= render "shared/carditem", item: item %>
      </div>
    <%end%>
  </div>

  <%# this is a place holder for the maps %>
  <div class="item-card-map-location"   data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">

  </div>
</div>
