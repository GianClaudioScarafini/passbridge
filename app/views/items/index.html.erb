<div class="index-map-items">
  <div class="card-search">
    <div class="search-input">
      <div class="d-flex gap-3">
        <%= form_tag(items_path, method: "get", class: "search-form", local: "true") do %>
          <%= text_field_tag :search, params[:search], placeholder: "What are you looking for?", class: "search-input" %>
          <%= submit_tag "Search", class: "search-button" %>
        <% end %>
     </div>
    </div>

    <div class="items-cards-array">
      <% @items.each do |item| %>
        <div class="mt-3 text-decoration-none index-card-padding">
          <%= render "shared/carditem", item: item %>
        </div>
      <%end%>
    </div>
  </div>

  <div class="map-container">
    <div class="item-card-map-location"   data-controller="map" data-map-target="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
